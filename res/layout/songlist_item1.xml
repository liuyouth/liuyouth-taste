<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:id="@+id/item_bg"
    android:background="@drawable/cell_select"
    android:descendantFocusability="afterDescendants"
    
    >
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:id="@+id/item_header"
    android:background="#00fffdfd"
    android:orientation="horizontal">
    
    <TextView
       android:id="@+id/item_songSingerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:paddingLeft="10dp"
        android:text="上传者"
        android:textSize="10sp"
        />

     <TextView
            android:id="@+id/item_songName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textSize="12sp" 
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:text="歌曲名称"
            android:layout_centerVertical="true"
            
            />
        <ImageView
            android:id="@+id/item_down"
    android:src="@drawable/item_down"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:divider="@null"
        android:focusable="true"
        android:paddingRight="0dp"/>

        <TextView
            android:id="@+id/item_songID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="10dp"
            android:text="1231231"
            android:textColor="#666666"
            android:textSize="10sp" />
    
</RelativeLayout>
  
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/item_footer"
    android:background="#40ffffff">
    
     
    <TextView
      android:id="@+id/lab_playing"
    
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:textColor="#ffffff"
    android:textSize="12sp" />
     <ImageView
         android:id="@+id/item_download"
   android:src="@drawable/item_dwonload"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:background="#00000000"
         android:layout_centerVertical="true"
         android:divider="@null"
         android:layout_marginRight="10dp"
       />
     <ImageView
   android:id="@+id/item_like"
         android:src="@drawable/item_ok" 
   android:layout_toLeftOf="@+id/item_download"
         android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
         android:layout_marginRight="9dp"
        android:divider="@null"
        android:background="#00000000"/>

     
</RelativeLayout>

    
</LinearLayout>